<p id="notice"><%= notice %></p>

<h1>Microposts</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.content %></td>
        <td><%= micropost.user_id %></td>
        <td><button type="button" class="btn btn-s btn-primary"><%= link_to 'Show', micropost %></td></button>
        <td><button type="button" class="btn btn-s btn-success"><%= link_to 'Edit', edit_micropost_path(micropost) %></td></button>
        <td><button type="button" class="btn btn-s btn-warning"><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td></button>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-s btn-info"><%= link_to 'New Micropost', new_micropost_path %></button>
